<%= month_calendar events: @exhibi do |date, exhibis| %>
  <br>
  <%= date.day %>
  <% exhibis.each do |exhibi| %>
    <div>
        <a class="calendarTitle" href='/exhibition/show_detail/<%=exhibi.id%>'>
        <%= "#{truncate(exhibi.title, :length => 10)}" %>
        </a>
    </div>
  <% end %>
  <br>
  <br>
<% end %>