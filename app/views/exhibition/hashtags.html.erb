
<style>
.searchKeywordTitle {
  color: #e0b43b;
  display: inline-block;
  font-size: 20px;
  font-weight: 300;
  text-align: center;
  float: right;
  margin-top: 8px;
  margin-right: 10px;
}
.showExhibition {
  margin-top: 50px;
}

.showExhibitionBox {
    width: 250px;
    height: 300px;
    border: 1px solid #e0b43b;
    display: inline-block; 
    margin: 10px;
    padding: 20px;
    text-align: center;
}

.showExhibitionItem {
    margin: auto;
    width: 150px;
    height: 210px;
} 
.itemTitle {
  color: #e0b43b;
  margin-top: 10px;
  font-weight: bold;
  font-size: 14px;
}
.itemSpot {
  font-size: 8px;
</style>

<div class="container">
  <div class="row">
    <div class="line" style="margin-top: 155px ">
       <a href="/exhibition/main"><span class="glyphicon glyphicon-arrow-left bigSpan" style="color: #000;"></span></a>
       <span class="searchKeywordTitle">#<%= @tag.tagname %>에 대한 검색 결과입니다</span>
    </div>      
  </div>
<div class="showExhibition">
    <% @exhibititons.each do |p| %>
        <div class="showExhibitionBox">
            <div class="showExhibitionItem">
              <a href='/exhibition/show_detail/<%=p.id%>'>
                <img src='<%=p.imageAddress%>' width='150px' height="210px">
                <h4 class="itemTitle"><%= "#{truncate(p.title, :length => 19)}" %></h4>
              </a>  
              <p class="itemSpot"><%= "#{truncate(p.spot, :length => 15)}" %></p>
            </div>
        </div>
    <% end %>    
</div>
  
</div>