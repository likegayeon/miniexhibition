<!-- 전시회 등록 (수작업) -->
<form action='/exhibition/create' method='POST'>
    이름:<input type='text' size=20 name='title' required>
    <br>
    사진:<input type='text' size=200 name='imageAddress' required>
    <br>
    시작날짜:<input type='date' size=20 name='dateStart' required>
    <br>
    끝날짜:<input type='date' size=20 name='dateEnd' required>
    <br>
    지역:
      <select name="location" value="1">
        <option value="서울" selected>서울</option>
        <option value="경기">경기</option>  
        <option value="인천">인천</option>
        <option value="대구">대구</option>  
        <option value="대전">대전</option>  
        <option value="울산">울산</option>
        <option value="부산">부산</option>
        <option value="강원">강원</option> 
        <option value="광주">광주</option>
        <option value="경상">경상</option>  
        <option value="전라">전라</option>  
        <option value="충청">충청</option>  
        <option value="제주">제주</option>  
      </select><br />
    <br>
    위치:<input type='text' size=20 name='spot' required>
    <br>
    latitude:<input type='text' size=20 name='latitude'>
    <br>
    longitude:<input type='text' size=20 name='longitude'>
    <br>
    개관 시간: <input type='time' size=20 name='time' value="10:00" required>
    <br>
    문의:<input type='text' size=20 name='callCenter' required>
    <br>
    가격:<input type='text' size=20 name='price' required>
    <br>
    <button type="submit">입력</button>
    <br>
</form>