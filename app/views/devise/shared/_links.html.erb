<style>
  .link-btn{
  color: #e0b43b;
  text-align: center;
  margin: 0 auto;
}
</style>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  Want to Join MUMOO? | 
  <%= link_to "Sign Up", new_registration_path(resource_name), :class => 'link-btn'%>
<% end -%>

<br />
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  Forgot Password? | 
  <%= link_to "Find Password", new_password_path(resource_name), :class => 'link-btn' %>
<% end -%>

<%- if controller_name != 'sessions' %>
  Already have MUMOO Account? | 
  <%= link_to "Login", new_session_path(resource_name), :class => 'link-btn' %>
<% end -%><br />

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>


<%- if devise_mapping.omniauthable? %>
  <br />
  <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-block btn-social btn-facebook" do %>
    <span class="fa fa-facebook"></span> 페이스북 계정으로 로그인하기
  <% end %>
  
  <%= link_to omniauth_authorize_path(resource_name, :google_oauth2), class: "btn btn-block btn-social btn-google" do %>
    <span class="fa fa-google"></span> 구글 계정으로 로그인하기
  <% end %>
  </div>
<% end -%>